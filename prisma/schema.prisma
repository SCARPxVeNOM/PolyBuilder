generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User & Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  walletAddress String?   @unique
  bio           String?
  githubUrl     String?
  twitterUrl    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  templates     Template[]
  purchases     TemplatePurchase[]
  certificates  NFTCertificate[]
  reviews       TemplateReview[]
  organizations OrganizationMember[]
  auditLogs     AuditLog[]
  analytics     ContractAnalytics[]
  scans         SecurityScan[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Template Marketplace
model Template {
  id          String   @id @default(cuid())
  name        String
  description String
  code        String   @db.Text
  language    String   @default("solidity")
  category    String
  tags        String[]
  
  price       Float    @default(0)
  isPremium   Boolean  @default(false)
  isPrivate   Boolean  @default(false)
  
  downloads   Int      @default(0)
  likes       Int      @default(0)
  views       Int      @default(0)
  
  thumbnail   String?
  demoUrl     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String
  author    User              @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  purchases TemplatePurchase[]
  reviews   TemplateReview[]
  
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  
  @@index([category])
  @@index([isPremium])
  @@index([authorId])
}

model TemplatePurchase {
  id         String   @id @default(cuid())
  purchaseId String   @unique
  
  amount     Float
  currency   String   @default("USD")
  
  paymentMethod String // stripe, crypto
  txHash        String?
  
  createdAt DateTime @default(now())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model TemplateReview {
  id      String @id @default(cuid())
  rating  Int
  comment String?
  
  createdAt DateTime @default(now())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  
  @@unique([userId, templateId])
}

// NFT Certification
model NFTCertificate {
  id            String   @id @default(cuid())
  name          String
  description   String
  imageUrl      String
  
  contractAddress String
  tokenId         String
  blockchain      String @default("polygon")
  txHash          String
  
  level         String // beginner, intermediate, advanced, expert
  skills        String[]
  
  issuedAt DateTime @default(now())
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@unique([contractAddress, tokenId])
}

// Organizations
model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  website     String?
  
  plan        String   @default("free") // free, pro, enterprise
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  members       OrganizationMember[]
  subscriptions Subscription[]
  auditLogs     AuditLog[]
  templates     Template[]
}

model OrganizationMember {
  id   String @id @default(cuid())
  role String @default("member") // owner, admin, member, viewer
  
  joinedAt DateTime @default(now())
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@unique([userId, organizationId])
}

model Subscription {
  id     String @id @default(cuid())
  status String // active, canceled, past_due
  
  plan            String // pro, enterprise
  priceId         String
  customerId      String
  subscriptionId  String @unique
  
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  resource  String
  details   String?  @db.Text
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@index([userId])
  @@index([createdAt])
}

// Contract Analytics
model ContractAnalytics {
  id String @id @default(cuid())
  
  contractAddress String
  contractName    String
  blockchain      String @default("polygon")
  
  deploymentCost  Float?
  gasUsed         BigInt?
  
  totalTransactions Int    @default(0)
  totalGasSpent     Float  @default(0)
  
  optimizationScore Int? // 0-100
  securityScore     Int? // 0-100
  
  metadata Json?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([contractAddress])
}

// Security Scanning
model SecurityScan {
  id String @id @default(cuid())
  
  contractCode String @db.Text
  contractName String
  
  vulnerabilities Json // array of found vulnerabilities
  severity        String // critical, high, medium, low, info
  
  totalIssues     Int
  criticalIssues  Int @default(0)
  highIssues      Int @default(0)
  mediumIssues    Int @default(0)
  lowIssues       Int @default(0)
  
  recommendations String @db.Text
  
  scannedAt DateTime @default(now())
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([scannedAt])
}

// Polygon Grants
model GrantApplication {
  id          String @id @default(cuid())
  projectName String
  description String @db.Text
  category    String
  
  fundingAmount Float
  milestones    Json
  
  status String @default("draft") // draft, submitted, under_review, approved, rejected
  
  submittedAt DateTime?
  reviewedAt  DateTime?
  
  metadata Json?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
