{
  "name": "polybuilder-vscode",
  "displayName": "PolyBuilder - Polygon Smart Contract IDE",
  "description": "Build, deploy, and analyze Solidity smart contracts on Polygon directly from VS Code",
  "version": "1.0.0",
  "publisher": "polybuilder",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "polygon",
    "solidity",
    "smart-contracts",
    "web3",
    "blockchain",
    "ethereum"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "onCommand:polybuilder.compile",
    "onCommand:polybuilder.deploy",
    "onCommand:polybuilder.analyze"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polybuilder.compile",
        "title": "PolyBuilder: Compile Contract",
        "icon": "$(file-code)"
      },
      {
        "command": "polybuilder.deploy",
        "title": "PolyBuilder: Deploy to Polygon",
        "icon": "$(rocket)"
      },
      {
        "command": "polybuilder.analyze",
        "title": "PolyBuilder: Analyze Security",
        "icon": "$(shield)"
      },
      {
        "command": "polybuilder.optimize",
        "title": "PolyBuilder: Optimize Gas",
        "icon": "$(zap)"
      },
      {
        "command": "polybuilder.aiAssist",
        "title": "PolyBuilder: AI Assistant",
        "icon": "$(sparkle)"
      },
      {
        "command": "polybuilder.templates",
        "title": "PolyBuilder: Browse Templates",
        "icon": "$(library)"
      },
      {
        "command": "polybuilder.openStudio",
        "title": "PolyBuilder: Open Web Studio",
        "icon": "$(link-external)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == solidity",
          "command": "polybuilder.compile",
          "group": "polybuilder@1"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "polybuilder.analyze",
          "group": "polybuilder@2"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "polybuilder.aiAssist",
          "group": "polybuilder@3"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == solidity",
          "command": "polybuilder.compile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "polybuilder.deploy",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "PolyBuilder",
      "properties": {
        "polybuilder.apiKey": {
          "type": "string",
          "default": "",
          "description": "PolyBuilder API key for authenticated features"
        },
        "polybuilder.defaultNetwork": {
          "type": "string",
          "enum": ["amoy", "mumbai", "polygon"],
          "default": "amoy",
          "description": "Default Polygon network for deployment"
        },
        "polybuilder.privateKey": {
          "type": "string",
          "default": "",
          "description": "Wallet private key for contract deployment (stored securely)"
        },
        "polybuilder.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code suggestions and analysis"
        },
        "polybuilder.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze contracts on save"
        }
      }
    },
    "snippets": [
      {
        "language": "solidity",
        "path": "./snippets/solidity.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "polybuilder",
          "title": "PolyBuilder",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "polybuilder": [
        {
          "id": "polybuilderContracts",
          "name": "My Contracts"
        },
        {
          "id": "polybuilderTemplates",
          "name": "Templates"
        },
        {
          "id": "polybuilderAnalytics",
          "name": "Analytics"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.20.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ethers": "^6.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SCARPxVeNOM/PolyBuilder.git"
  },
  "bugs": {
    "url": "https://github.com/SCARPxVeNOM/PolyBuilder/issues"
  },
  "homepage": "https://polybuilder.com"
}

